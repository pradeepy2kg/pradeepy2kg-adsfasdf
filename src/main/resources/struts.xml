<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC  "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <include file="struts-default.xml"/>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.custom.i18n.resources" value="textproperties"/>
    <constant name="struts.action.extension" value="do"/>
    <constant name="struts.objectFactory" value="spring" />
    <constant name="struts.devMode" value="true" />

    <package name="NG" namespace="/NG" extends="struts-default">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
        </result-types>
    </package>

    <package name="epr" namespace="/" extends="NG">
        <interceptors>
            <interceptor name="scopedModelDriven" class="com.opensymphony.xwork2.interceptor.ScopedModelDrivenInterceptor">
                 <param name="scope">session</param>
                 <param name="name">birthRegister</param>
                 <param name="className">lk.rgd.crs.api.domain.BirthRegister</param>
             </interceptor>
        </interceptors>

        <action name="eprLogin" class="lk.rgd.crs.web.action.BirthRegisterAction" method="login">
            <result type="tiles" name="success">epr.home</result>
            <result type="tiles" name="error">epr.error</result>
        </action>

        <action name="eprHome" class="lk.rgd.crs.web.action.BirthRegisterAction" method="welcome">
            <result type="tiles" name="success">epr.welcome</result>
        </action>

        <action name="eprLanguage" class="lk.rgd.crs.web.action.BirthRegisterAction" method="selectLanguage">
            <result type="tiles" name="success">epr.home</result>
        </action>
                
        <action name="eprBirthRegistration_*" class="lk.rgd.crs.web.action.BirthRegisterAction" method="{1}">
            <!--<interceptor-ref name="scopedModelDriven"/>-->
            <result type="tiles" name="pageLoad">epr.birthRegistration_form1</result>
            <result type="tiles" name="form2">epr.birthRegistration_form2</result>
            <result type="tiles" name="form3">epr.birthRegistration_form3</result>
            <result type="tiles" name="form4">epr.birthRegistration_form4</result>
            <result type="tiles" name="success">epr.welcome</result>
            <result type="tiles" name="error">epr.error</result>
        </action>

        <action name="eprBirthConfirmation_*" class="lk.rgd.crs.web.action.BirthRegisterAction" method="{1}">
            <result type="tiles" name="pageLoad">epr.birthConfirmation_form1</result>
            <result type="tiles" name="form2">epr.birthConfirmation_form2</result>
            <result type="tiles" name="success">epr.welcome</result>
            <result type="tiles" name="error">epr.newBirthCertificate</result>
        </action>

        <action name="eprBirth_*" class="lk.rgd.crs.web.action.BirthRegisterAction" method="{1}">
            <result type="tiles" name="pageLoad">epr.newBirthCertificate</result>
            <result type="tiles" name="success">epr.welcome</result>
            <result type="tiles" name="error">epr.newBirthCertificate</result>
        </action>
    </package>
</struts>